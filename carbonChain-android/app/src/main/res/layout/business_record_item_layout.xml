<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/business_record_item_height"
    android:layout_marginLeft="@dimen/public_item_margin_left_5_dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="@dimen/public_item_margin_right_5_dp"
    android:background="@drawable/shadow_bg_bottom_line">
    <ImageView
        android:id="@+id/show_image"
        android:layout_width="@dimen/asset_coin_icon_width"
        android:layout_height="@dimen/asset_coin_icon_height"
        android:layout_marginLeft="14dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/coin_icon_btc"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/show_image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="@string/coin_name_btc"
            android:textSize="@dimen/public_text_size_16_sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="2020-01-02"
            android:textSize="@dimen/public_text_size_12_sp"
            android:textColor="#ff4a4a4a"/>
        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="sddfsjjs837584hdfsdfasfjw934293923"
            android:textSize="@dimen/public_text_size_12_sp"
            android:textColor="#ff4a4a4a"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_business_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="12dp"
        android:textSize="@dimen/public_text_size_18_sp"/>

    <TextView
        android:id="@+id/tv_business_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_below="@id/tv_business_number"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/public_text_size_12_sp"
        android:textColor="#ff4a4a4a"/>
</RelativeLayout>