<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="160"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_find_logo_height"
        android:src="@mipmap/main_find_logo_icon"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_find_search_body_height"
        android:layout_marginTop="@dimen/main_find_search_body_margin_top"
        android:layout_marginLeft="@dimen/main_find_search_body_margin_left"
        android:layout_marginRight="@dimen/main_find_search_body_margin_left"
        android:background="@drawable/find_search_bg">
        <ImageView
            android:id="@+id/main_find_search_body_icon"
            android:layout_width="@dimen/main_find_search_body_icon_width"
            android:layout_height="@dimen/main_find_search_body_icon_height"
            android:src="@mipmap/main_find_search_body_icon"
            android:layout_marginLeft="@dimen/main_find_search_body_icon_margin_left"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/main_find_search_body_icon"
            android:layout_marginLeft="@dimen/main_find_search_body_edit_text_margin_left"
            android:layout_marginRight="@dimen/main_find_search_body_icon_margin_left"
            android:gravity="center_vertical"
            android:background="@null"
            android:textCursorDrawable="@drawable/find_search_edit_text_cursor_color"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_find_search_body_icon_item_margin_top"
        android:layout_marginLeft="@dimen/main_find_search_body_icon_item_margin_left"
        android:layout_marginRight="@dimen/main_find_search_body_icon_item_margin_left">
        <ImageView
            android:layout_width="@dimen/main_find_search_body_icon_item_width"
            android:layout_height="@dimen/main_find_search_body_icon_item_height"
            android:src="@mipmap/main_find_search_body_icon_1"/>
        <ImageView
            android:layout_width="@dimen/main_find_search_body_icon_item_width"
            android:layout_height="@dimen/main_find_search_body_icon_item_height"
            android:src="@mipmap/main_find_search_body_icon_2"/>
        <ImageView
            android:layout_width="@dimen/main_find_search_body_icon_item_width"
            android:layout_height="@dimen/main_find_search_body_icon_item_height"
            android:src="@mipmap/main_find_search_body_icon_3"/>
        <ImageView
            android:layout_width="@dimen/main_find_search_body_icon_item_width"
            android:layout_height="@dimen/main_find_search_body_icon_item_height"
            android:src="@mipmap/main_find_search_body_icon_4"/>
        <ImageView
            android:layout_width="@dimen/main_find_search_body_icon_item_width"
            android:layout_height="@dimen/main_find_search_body_icon_item_height"
            android:src="@mipmap/main_find_search_body_icon_5"/>
        <ImageView
            android:layout_width="@dimen/main_find_search_body_icon_item_width"
            android:layout_height="@dimen/main_find_search_body_icon_item_height"
            android:src="@mipmap/main_find_search_body_icon_6"/>
        <ImageView
            android:layout_width="@dimen/main_find_search_body_icon_item_width"
            android:layout_height="@dimen/main_find_search_body_icon_item_height"
            android:src="@mipmap/main_find_search_body_icon_add"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="247"/>
</LinearLayout>