<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="@dimen/dp_107"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_diect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_record_out"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tx_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2020/04/08 15:06:05"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_txhash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_9"
            android:ellipsize="middle"
            android:singleLine="true"
            tools:text="0x8d6f99c5decbfa8f0be754d7dc706c1fb79bd7e8f9d0028ff2af9694ba215db8"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_9"
            android:ellipsize="middle"
            android:singleLine="true"
            tools:text="备注：测试发送"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            tools:text="-4.5"
            android:layout_gravity="right"
            android:textColor="@color/record_out_color"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_3"
            tools:text="完成"
            android:textColor="#A8B3CD"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


</LinearLayout>