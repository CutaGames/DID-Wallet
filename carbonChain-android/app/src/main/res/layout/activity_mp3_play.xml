<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tancheng.carbonchain.activities.storage.mp3.ActivityMp3Play"
    android:background="@android:color/white">

    <!-- custom action bar begin -->
    <RelativeLayout
        android:id="@+id/custom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_action_bar_height"
        android:background="@drawable/shadow_bg_bottom_line">
        <RelativeLayout
            android:id="@+id/custom_action_bar_icon_layout"
            android:layout_width="@dimen/custom_action_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/iv_title_left_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/action_bar_icon_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="音乐.mp3"
            android:textColor="@color/custom_action_bar_title_text_color"
            android:textSize="@dimen/custom_action_bar_title_text_size"/>
    </RelativeLayout>
    <!-- custom action bar end -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/custom_action_bar_height"
        android:layout_marginBottom="@dimen/bottom_oprations_height"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="39"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="260"
            android:src="@mipmap/mp3_play_pre_image_default"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="21"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close To You"
            android:textSize="@dimen/mp3_play_music_name_text_size"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Olivia Ong"
            android:textSize="@dimen/mp3_play_music_author_text_size"
            android:textColor="@color/mp3_play_music_author_text_color"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"/>

        <!-- for seek bar -->
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:max="100"
            android:progress="30"
            android:progressDrawable="@drawable/seek_bar_bg"
            android:thumb="@drawable/seek_bar_thumb"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="02:11"
                android:textColor="@color/mp3_play_time_text_color"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="03:39"
                android:textColor="@color/mp3_play_time_text_color"
                android:textSize="13sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@mipmap/mp3_play_control_loop_way_icon"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@mipmap/mp3_play_control_prev_icon"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"/>
            <ImageView
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:src="@mipmap/mp3_play_control_suspend_icon"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@mipmap/mp3_play_control_next_icon"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"/>
            <ImageView
                android:id="@+id/mp3_play_control_list"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@mipmap/mp3_play_control_list_icon"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"/>

    </LinearLayout>

</FrameLayout>
