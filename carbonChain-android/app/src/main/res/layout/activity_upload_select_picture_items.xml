                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/picture_default_7"/>
                    <ImageView
                        android:layout_width="@dimen/upload_item_select_icon_width"
                        android:layout_height="@dimen/upload_item_select_icon_height"
                        android:layout_marginLeft="@dimen/upload_item_select_icon_margin_left"
