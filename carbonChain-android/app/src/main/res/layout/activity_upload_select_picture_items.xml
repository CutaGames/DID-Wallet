<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tancheng.carbonchain.activities.upload.ActivityUploadSelectPictureItems"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/upload_select_target_height">
        <!-- custom action bar begin -->
        <RelativeLayout
            android:id="@+id/custom_action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_action_bar_height"
            android:background="@drawable/shadow_bg_bottom_line">
            <RelativeLayout
                android:id="@+id/custom_action_bar_icon_layout"
                android:layout_width="@dimen/custom_action_bar_height"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:id="@+id/iv_title_left_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/action_bar_icon_back"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/upload_picture_select_folder_body_recent_text"
                android:textColor="@color/custom_action_bar_title_text_color"
                android:textSize="@dimen/custom_action_bar_title_text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/custom_action_bar_select_all_margin_right"
                android:text="@string/public_select_all_text"
                android:textSize="@dimen/custom_action_bar_select_all_text_size"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
        <!-- custom action bar end -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_picture_select_picture_number_text"
            android:textColor="@color/upload_picture_select_picture_number_text_color"
            android:textSize="@dimen/upload_picture_select_picture_number_text_size"
            android:layout_marginLeft="@dimen/upload_picture_select_picture_number_margin_left"
            android:layout_marginRight="@dimen/upload_picture_select_picture_number_margin_left"
            android:layout_marginTop="@dimen/upload_picture_select_picture_number_margin_top"
            android:layout_marginBottom="@dimen/upload_picture_select_picture_number_margin_bottom"/>

