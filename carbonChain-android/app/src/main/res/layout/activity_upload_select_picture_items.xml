            </LinearLayout>
        </LinearLayout>
        <!-- pictures end -->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/upload_select_target_height"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/upload_select_target_padding_top"
        android:paddingBottom="@dimen/upload_select_target_padding_top"
        android:paddingLeft="@dimen/upload_select_target_padding_left"
        android:paddingRight="@dimen/upload_select_target_padding_right"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/upload_select_target_folder_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/upload_select_target_folder_bg"
            android:layout_marginRight="@dimen/upload_select_target_folder_margin_right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/upload_select_target_folder_margin_left"
                android:layout_marginRight="@dimen/upload_select_target_folder_margin_left"
                android:text="@string/upload_select_target_folder_text"
                android:textColor="@color/upload_select_target_folder_text_color"
                android:textSize="@dimen/upload_select_target_folder_text_size"/>
        </RelativeLayout>
        <Button
            android:layout_width="@dimen/upload_select_btn_width"
            android:layout_height="match_parent"
            android:text="@string/upload_select_btn_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/upload_select_btn_text_size"
            android:background="@drawable/upload_select_btn_bg"/>
    </LinearLayout>
</RelativeLayout>