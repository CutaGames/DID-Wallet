                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/picture_default_1"/>
                    <ImageView
                        android:layout_width="@dimen/upload_item_select_icon_width"
                        android:layout_height="@dimen/upload_item_select_icon_height"
                        android:layout_marginLeft="@dimen/upload_item_select_icon_margin_left"
                        android:layout_marginTop="@dimen/upload_item_select_icon_margin_top"
