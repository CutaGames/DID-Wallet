<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/smart_home_camera_sleep_setting_new_line_height"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:text="@string/public_confirm_text"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:background="@drawable/public_bg_white_corners_8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_confirm"
        android:layout_marginBottom="12dp"
        android:orientation="vertical"
        android:background="@drawable/public_bg_white_corners_8">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:text="@string/smart_home_camera_sleep_settings_new_begin_time_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/public_text_size_18_sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/data_picker_title_line_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp">

            <com.tancheng.carbonchain.activities.smarthome.camera.settings.sleep.datepicker.PickerView
                android:id="@+id/dpv_year"
                android:layout_width="0dp"
                android:layout_height="@dimen/picker_view_height"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/tv_year_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/public_text_year"
                android:textColor="@color/date_picker_text_dark"
                android:textSize="@dimen/public_text_size_20_sp" />

            <com.tancheng.carbonchain.activities.smarthome.camera.settings.sleep.datepicker.PickerView
                android:id="@+id/dpv_month"
                android:layout_width="0dp"
                android:layout_height="@dimen/picker_view_height"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/tv_month_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/public_text_month"
                android:textColor="@color/date_picker_text_dark"
                android:textSize="@dimen/public_text_size_20_sp" />

            <com.tancheng.carbonchain.activities.smarthome.camera.settings.sleep.datepicker.PickerView
                android:id="@+id/dpv_day"
                android:layout_width="0dp"
                android:layout_height="@dimen/picker_view_height"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/tv_day_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/public_text_day"
                android:textColor="@color/date_picker_text_dark"
                android:textSize="@dimen/public_text_size_20_sp" />

            <com.tancheng.carbonchain.activities.smarthome.camera.settings.sleep.datepicker.PickerView
                android:id="@+id/dpv_hour"
                android:layout_width="0dp"
                android:layout_height="@dimen/picker_view_height"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/tv_hour_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/public_text_hour"
                android:textColor="@color/date_picker_text_dark"
                android:textSize="@dimen/public_text_size_20_sp" />

            <com.tancheng.carbonchain.activities.smarthome.camera.settings.sleep.datepicker.PickerView
                android:id="@+id/dpv_minute"
                android:layout_width="0dp"
                android:layout_height="@dimen/picker_view_height"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/tv_minute_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/public_text_minute"
                android:textColor="@color/date_picker_text_dark"
                android:textSize="@dimen/public_text_size_20_sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>