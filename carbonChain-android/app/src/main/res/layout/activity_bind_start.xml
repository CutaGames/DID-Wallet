<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_user_info_FFFFFF"
    tools:context=".activities.bindsevice.BindStartActivity">


    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/action_bar_icon_back" />
    </RelativeLayout>

    <TextView
        android:layout_below="@id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_BBBBBB"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bindDevice"
            android:textColor="@color/mine_user_info_000000"
            android:textSize="@dimen/sp_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_tips"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_BBBBBB"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_55"
            android:background="@mipmap/bind_code_eg"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tvScan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/base_change_blue"
        android:gravity="center"
        android:text="@string/scan"
        android:textColor="@color/mine_user_info_FFFFFF"
        android:textSize="@dimen/sp_12"/>
</RelativeLayout>