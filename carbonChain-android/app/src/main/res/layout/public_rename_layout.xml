<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/confirm_delete_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_window_shadow_color"
    android:paddingLeft="@dimen/confirm_padding_left"
    android:paddingRight="@dimen/confirm_padding_left">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/confirm_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_rename_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/confirm_title_margin_top"
            android:gravity="center"
            android:text="@string/public_rename_text"
            android:textColor="@android:color/black"
            android:textSize="@dimen/confirm_title_default_1_text_size"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/confirm_edit_text_parent_height"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/confirm_edit_text_parent_bg">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:background="@null"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffdddddd"
            android:layout_marginTop="@dimen/confirm_btn_margin_top"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/confirm_btn_height"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/confirm_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/public_cancel_text"
                android:textSize="@dimen/confirm_cancel_text_size"
                android:textColor="@color/confirm_cancel_text_color"
                android:gravity="center"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffdddddd"/>
            <TextView
                android:id="@+id/confirm_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/public_confirm_text"
                android:textSize="@dimen/confirm_delete_text_size"
                android:textColor="@color/confirm_delete_text_color"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
