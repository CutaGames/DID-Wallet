<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- custom action bar begin -->
    <RelativeLayout
        android:id="@+id/custom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_action_bar_height"
        android:background="@drawable/shadow_bg_bottom_line">
        <RelativeLayout
            android:id="@+id/custom_action_bar_icon_layout"
            android:layout_width="@dimen/custom_action_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/iv_title_left_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/action_bar_icon_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/smart_home_add_device_text"
            android:textColor="@color/custom_action_bar_title_text_color"
            android:textSize="@dimen/custom_action_bar_title_text_size"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:src="@mipmap/custom_action_bar_scan_icon"/>
    </RelativeLayout>
    <!-- custom action bar end -->

    <!-- search key word -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_find_search_body_height"
        android:layout_marginTop="@dimen/smart_home_search_margin_top"
        android:layout_marginLeft="@dimen/smart_home_search_margin_left"
        android:layout_marginRight="@dimen/smart_home_search_margin_left"
        android:background="@drawable/find_search_bg">
        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="@dimen/main_find_search_body_icon_width"
            android:layout_height="@dimen/main_find_search_body_icon_height"
            android:src="@mipmap/main_find_search_body_icon"
            android:layout_marginLeft="@dimen/main_find_search_body_icon_margin_left"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/search_icon"
            android:layout_marginLeft="@dimen/main_find_search_body_edit_text_margin_left"
            android:layout_marginRight="@dimen/main_find_search_body_icon_margin_left"
            android:gravity="center_vertical"
            android:background="@null"
            android:textCursorDrawable="@drawable/find_search_edit_text_cursor_color"
            android:hint="@string/smart_home_search_device_hint"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/smart_home_add_device_title_margin_top"
        android:layout_marginBottom="@dimen/smart_home_add_device_title_margin_bottom"
        android:text="@string/smart_home_add_device_title_text"
        android:textColor="@color/smart_home_add_device_title_text_color"
        android:textSize="@dimen/smart_home_add_device_title_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/brand1"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
        <ImageView
            android:id="@+id/brand2"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
        <ImageView
            android:id="@+id/brand3"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
        <ImageView
            android:id="@+id/brand4"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/brand5"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
        <ImageView
            android:id="@+id/brand6"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
        <ImageView
            android:id="@+id/brand7"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
        <ImageView
            android:id="@+id/brand8"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/brand9"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
        <ImageView
            android:id="@+id/brand10"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
        <ImageView
            android:id="@+id/brand11"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
        <ImageView
            android:id="@+id/brand12"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@mipmap/smart_home_add_device_default_logo"/>
    </LinearLayout>

</LinearLayout>
