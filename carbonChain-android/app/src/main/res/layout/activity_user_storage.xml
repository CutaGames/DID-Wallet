<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.storage.mine.UserStorageActivity">

    <RelativeLayout
        android:id="@+id/custom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_action_bar_height"
        android:background="@drawable/shadow_bg_bottom_line">
        <RelativeLayout
            android:id="@+id/custom_action_bar_icon_layout"
            android:layout_width="@dimen/custom_action_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/iv_title_left_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/action_bar_icon_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="管理员"
            android:textColor="@color/custom_action_bar_title_text_color"
            android:textSize="@dimen/custom_action_bar_title_text_size"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_manage_user_68"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivHeard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/heard_icon"
            android:layout_marginLeft="@dimen/mine_manage_user_17"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/mine_manage_user_10">

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理员"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8B8B8D"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/public_text_size_13_sp"
                android:text="LEO"/>

        </LinearLayout>

    </LinearLayout>


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/mPieChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_gravity="center_vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0F000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_bind_email_dp_44"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/public_item_margin_left_15_dp"
        android:paddingRight="@dimen/mine_user_info_dp_32">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录时间"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-01-17"
            android:layout_alignParentRight="true"
            android:textColor="#888888"
            android:textSize="14sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0F000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_bind_email_dp_44"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/public_item_margin_left_15_dp"
        android:paddingRight="@dimen/mine_user_info_dp_32">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录设备"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="炭承数据设备"
            android:layout_alignParentRight="true"
            android:textColor="#888888"
            android:textSize="14sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvDeviceUnBind"
        android:layout_marginTop="@dimen/mine_user_info_dp_130"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_user_info_dp_44"
        android:layout_marginLeft="@dimen/mine_user_info_dp_20"
        android:layout_marginRight="@dimen/mine_user_info_dp_20"
        android:text="设备解绑"
        android:gravity="center"
        android:textColor="@color/mine_user_info_FFFFFF"
        android:textSize="@dimen/mine_user_info_sp_16"
        android:background="@drawable/mine_user_info_sign_out_bg"/>

</LinearLayout>