<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff8fbff"
        android:orientation="vertical">

        <!-- custom action bar begin -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_action_bar_height"
            android:background="@drawable/shadow_bg_bottom_line">
            <!-- title left -->
            <TextView
                android:id="@+id/custom_action_bar_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/public_cancel_text"
                android:textColor="@color/custom_action_bar_title_text_color"
                android:textSize="@dimen/custom_action_bar_title_text_size"/>

            <!-- title center -->
            <TextView
                android:id="@+id/custom_action_bar_title_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/smart_home_camera_sleep_settings_timed_text"
                android:textColor="@color/custom_action_bar_title_text_color"
                android:textSize="@dimen/custom_action_bar_title_text_size"/>

            <!-- title right -->
            <TextView
                android:id="@+id/custom_action_bar_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:text="@string/public_confirm_text"
                android:textColor="#ff0066ff"
                android:textSize="@dimen/custom_action_bar_title_text_size"/>

        </RelativeLayout>
        <!-- custom action bar end -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_bg_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smart_home_camera_sleep_setting_new_line_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/smart_home_camera_sleep_setting_new_repeat_text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/public_text_size_16_sp"/>
                <RelativeLayout
                    android:id="@+id/repeat_day_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="230"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/smart_home_camera_sleep_setting_new_repeat_time_default_text"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/arrow_down_select_false"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0f000000"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smart_home_camera_sleep_setting_new_line_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/smart_home_camera_sleep_setting_new_begin_time_text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/public_text_size_16_sp"/>
                <RelativeLayout
                    android:id="@+id/begin_time_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="230"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/tv_begin_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/smart_home_camera_sleep_setting_new_time_none_text"/>
                    <ImageView
                        android:id="@+id/iv_begin_time_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/arrow_down_select_false"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/iv_begin_time_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_centerVertical="true"
                        android:text="@string/public_delete_text"
                        android:textSize="@dimen/public_text_size_10_sp"
                        android:textColor="#ffc5c5c5"
                        android:visibility="gone"
                        android:background="@drawable/smart_home_camera_sleep_setting_time_delete_bg"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0f000000"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smart_home_camera_sleep_setting_new_line_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/smart_home_camera_sleep_setting_new_end_time_text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/public_text_size_16_sp"/>
                <RelativeLayout
                    android:id="@+id/end_time_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="230"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/smart_home_camera_sleep_setting_new_time_none_text"/>
                    <ImageView
                        android:id="@+id/iv_end_time_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/arrow_down_select_false"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/iv_end_time_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_centerVertical="true"
                        android:text="@string/public_delete_text"
                        android:textSize="@dimen/public_text_size_10_sp"
                        android:textColor="#ffc5c5c5"
                        android:visibility="gone"
                        android:background="@drawable/smart_home_camera_sleep_setting_time_delete_bg"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
