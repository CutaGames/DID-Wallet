<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff8fbff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- custom action bar begin -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_action_bar_height"
            android:background="@drawable/shadow_bg_bottom_line">
            <!-- back arrow -->
            <ImageView
                android:id="@+id/iv_title_left_back"
                android:layout_width="@dimen/custom_action_bar_height"
                android:layout_height="@dimen/custom_action_bar_height"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/action_bar_icon_back"/>

            <!-- title center -->
            <TextView
                android:id="@+id/custom_action_bar_title_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/smart_home_camera_sleep_settings_titile_text"
                android:textColor="@color/custom_action_bar_title_text_color"
                android:textSize="@dimen/custom_action_bar_title_text_size"/>

        </RelativeLayout>
        <!-- custom action bar end -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/smart_home_camera_settings_line_height"
            android:background="@drawable/shadow_bg_bottom_line">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/smart_home_camera_sleep_settings_titile_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/public_text_size_16_sp"/>
            <com.tancheng.carbonchain.utils.MySwitchButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                app:sb_show_indicator="false"
                app:sb_checked_color="#FF0066FF"
                app:sb_checked="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0F000000"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/smart_home_camera_sleep_setting_remark_text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/public_text_size_12_sp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:background="#ffffff"
                    android:clipChildren="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/none_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/none_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/smart_home_camera_sleep_setting_none_image"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/smart_home_camera_sleep_setting_none_text"
            android:textSize="@dimen/public_text_size_16_sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/none_image"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/main_storage_upload_width"
        android:layout_height="@dimen/main_storage_upload_height"
        android:src="@mipmap/main_storage_upload_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/main_storage_upload_margin_right"
        android:layout_marginBottom="@dimen/main_storage_upload_margin_bottom"/>
</RelativeLayout>
