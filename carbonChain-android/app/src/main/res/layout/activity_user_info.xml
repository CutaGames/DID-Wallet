<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.storage.mine.ActivityUserInfo">

    <RelativeLayout
        android:id="@+id/custom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_action_bar_height"
        android:background="@drawable/shadow_bg_bottom_line">
        <RelativeLayout
            android:id="@+id/custom_action_bar_icon_layout"
            android:layout_width="@dimen/custom_action_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/iv_title_left_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/action_bar_icon_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/main_mine_item_profile_text"
            android:textColor="@color/custom_action_bar_title_text_color"
            android:textSize="@dimen/custom_action_bar_title_text_size"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/mine_user_info_dp_22">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/mine_userinfo_heard"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/mine_userinfo_camera"
                android:layout_marginLeft="@dimen/mine_user_info_dp_21"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/mine_user_info_dp_7">

            <EditText
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@null"
                android:text="shsjhsdd"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/mine_userinfo_edit"
                android:layout_marginLeft="@dimen/mine_user_info_dp_21"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0f000000"
            android:layout_marginTop="@dimen/mine_user_info_dp_31"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_mine_item_height"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/mine_user_info_sex"
                android:textColor="@color/main_mine_item_text_color"
                android:textSize="@dimen/main_mine_item_text_size"
                android:layout_marginLeft="@dimen/main_mine_item_text_margin_left"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="男"
                android:textColor="@color/mine_user_info_888888"
                android:textSize="@dimen/mine_user_info_sp_14"
                android:layout_marginLeft="@dimen/main_mine_item_text_margin_left"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_mine_item_arrow_icon"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tvUserInfo"
                android:layout_marginLeft="@dimen/mine_user_info_dp_2"
                android:layout_marginRight="@dimen/main_mine_item_arrow_margin_right"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0f000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_mine_item_height"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/mine_user_info_phone"
                android:textColor="@color/main_mine_item_text_color"
                android:textSize="@dimen/main_mine_item_text_size"
                android:layout_marginLeft="@dimen/main_mine_item_text_margin_left"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="159****1580"
                android:textColor="@color/mine_user_info_888888"
                android:textSize="@dimen/mine_user_info_sp_14"
                android:layout_marginLeft="@dimen/main_mine_item_text_margin_left"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/mine_user_info_dp_32"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0f000000"/>

        <LinearLayout
            android:id="@+id/llEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_mine_item_height"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/mine_user_info_email"
                android:textColor="@color/main_mine_item_text_color"
                android:textSize="@dimen/main_mine_item_text_size"
                android:layout_marginLeft="@dimen/main_mine_item_text_margin_left"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="绑定"
                android:textColor="@color/mine_user_info_888888"
                android:textSize="@dimen/mine_user_info_sp_14"
                android:layout_marginLeft="@dimen/main_mine_item_text_margin_left"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_mine_item_arrow_icon"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tvEmail"
                android:layout_marginLeft="@dimen/mine_user_info_dp_2"
                android:layout_marginRight="@dimen/main_mine_item_arrow_margin_right"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0f000000"/>

        <LinearLayout
            android:id="@+id/llAccountPsd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_mine_item_height"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/main_mine_item_text_margin_left"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/mine_user_info_psd"
                android:textColor="@color/main_mine_item_text_color"
                android:textSize="@dimen/main_mine_item_text_size" />

            <TextView
                android:id="@+id/tvPsd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="修改"
                android:textColor="@color/mine_user_info_888888"
                android:textSize="@dimen/mine_user_info_sp_14"
                android:layout_marginLeft="@dimen/main_mine_item_text_margin_left"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_mine_item_arrow_icon"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tvPsd"
                android:layout_marginLeft="@dimen/mine_user_info_dp_2"
                android:layout_marginRight="@dimen/main_mine_item_arrow_margin_right"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0f000000"/>

        <LinearLayout
            android:id="@+id/llUnLockWay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_mine_item_height"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/mine_user_info_unlock_way"
                android:textColor="@color/main_mine_item_text_color"
                android:textSize="@dimen/main_mine_item_text_size"
                android:layout_marginLeft="@dimen/main_mine_item_text_margin_left"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvUnLockWay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="设置"
                android:textColor="@color/mine_user_info_888888"
                android:textSize="@dimen/mine_user_info_sp_14"
                android:layout_marginLeft="@dimen/main_mine_item_text_margin_left"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_mine_item_arrow_icon"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tvUserInfo"
                android:layout_marginLeft="@dimen/mine_user_info_dp_2"
                android:layout_marginRight="@dimen/main_mine_item_arrow_margin_right"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0f000000"/>



        <TextView
            android:layout_marginTop="@dimen/mine_user_info_dp_130"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mine_user_info_dp_44"
            android:layout_marginLeft="@dimen/mine_user_info_dp_20"
            android:layout_marginRight="@dimen/mine_user_info_dp_20"
            android:text="@string/mine_user_info_sign_out"
            android:gravity="center"
            android:textColor="@color/mine_user_info_FFFFFF"
            android:textSize="@dimen/mine_user_info_sp_16"
            android:background="@drawable/mine_user_info_sign_out_bg"/>
    </LinearLayout>

</LinearLayout>