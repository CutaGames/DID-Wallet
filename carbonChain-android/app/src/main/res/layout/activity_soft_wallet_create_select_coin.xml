<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    
    <!-- custom action bar begin -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_action_bar_height"
        android:background="@drawable/shadow_bg_bottom_line">
        <!-- back arrow -->
        <ImageView
            android:id="@+id/iv_title_left_back"
            android:layout_width="@dimen/custom_action_bar_height"
            android:layout_height="@dimen/custom_action_bar_height"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/action_bar_icon_back"/>

        <!-- title center -->
        <TextView
            android:id="@+id/custom_action_bar_title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/asset_select_coin_type_text"
            android:textColor="@color/custom_action_bar_title_text_color"
            android:textSize="@dimen/custom_action_bar_title_text_size"/>

        <!-- title right -->
        <TextView
            android:id="@+id/custom_action_bar_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/asset_select_coin_confirm_add_text"
            android:textColor="@color/custom_action_bar_title_text_color"
            android:textSize="@dimen/public_text_size_15_sp"
            android:visibility="visible"/>
    </RelativeLayout>
    <!-- custom action bar end -->
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_content_title_height"
        android:paddingLeft="@dimen/public_content_title_padding_left"
        android:gravity="center_vertical"
        android:text="@string/asset_select_coin_type_more_text"
        android:textColor="@color/public_content_title_color"
        android:textSize="@dimen/public_text_size_12_sp"
        android:background="@color/public_content_title_bg"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</LinearLayout>
