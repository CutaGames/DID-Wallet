<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mine_user_info_FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_manage_user_68"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivHeard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/heard_icon"
            android:layout_marginLeft="@dimen/mine_manage_user_17"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/mine_manage_user_10">

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理员"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8B8B8D"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/public_text_size_13_sp"
                android:text="LEO"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/main_mine_item_arrow_icon"
            android:layout_marginRight="@dimen/mine_manage_user_17"/>
    </LinearLayout>

</LinearLayout>
