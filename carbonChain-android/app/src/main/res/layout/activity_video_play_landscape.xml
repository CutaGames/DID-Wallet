<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tancheng.carbonchain.activities.storage.video.ActivityVideoPlayLandscape"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/video_play_default_picture"/>

    <!-- custom action bar begin -->
    <RelativeLayout
        android:id="@+id/custom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_action_bar_height">
        <RelativeLayout
            android:id="@+id/custom_action_bar_icon_layout"
            android:layout_width="@dimen/custom_action_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/iv_title_left_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/action_bar_icon_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toRightOf="@id/custom_action_bar_icon_layout"
            android:text="我是标题.mp4"
            android:textColor="@android:color/white"
            android:textSize="@dimen/custom_action_bar_title_text_size"/>
        <ImageView
            android:id="@+id/switch_screen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/video_play_switch_screen"/>
        <ImageView
            android:id="@+id/video_play_landscape_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/switch_screen"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:src="@mipmap/video_play_landscape_more"/>
        <ImageView
            android:id="@+id/video_play_landscape_download"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/video_play_landscape_more"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:src="@mipmap/video_play_landscape_download"/>
        <ImageView
            android:id="@+id/video_play_landscape_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/video_play_landscape_download"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:src="@mipmap/video_play_landscape_delete"/>
        <ImageView
            android:id="@+id/video_play_landscape_move"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/video_play_landscape_delete"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:src="@mipmap/video_play_landscape_move"/>
        <ImageView
            android:id="@+id/video_play_landscape_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/video_play_landscape_move"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:src="@mipmap/video_play_landscape_share"/>
    </RelativeLayout>
    <!-- custom action bar end -->

    <ImageView
        android:id="@+id/video_play_play_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="13dp"
        android:src="@mipmap/video_play_play"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/video_play_play_icon"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="16dp"
        android:text="02:11/03:39"
        android:textColor="@android:color/white"
        android:textSize="8sp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="13dp"
        android:src="@mipmap/video_play_next"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="13dp"
        android:src="@mipmap/video_play_volume"/>
</RelativeLayout>
