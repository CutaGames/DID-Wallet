<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="@dimen/public_big_image_width"
            android:layout_height="@dimen/public_big_image_height"
            android:src="@mipmap/asset_wallet_create_success_image"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:text="@string/asset_add_soft_wallet_create_success_text"
            android:textSize="@dimen/public_text_size_16_sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/public_text_complete"
            android:textSize="@dimen/public_text_size_14_sp"
            android:textColor="#ff0066ff"
            android:background="@drawable/asset_add_wallet_complete_bg"/>
    </LinearLayout>

</RelativeLayout>
