<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_title_left_back"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:src="@mipmap/back_arrow_left_white_icon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:text="@string/smart_home_camera_title_text"
        android:textColor="@android:color/white"
        android:textSize="@dimen/public_text_size_16_sp"/>
    <TextView
        android:id="@+id/smart_home_camera_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:text="300K/S"
        android:textColor="@android:color/white"
        android:textSize="@dimen/public_text_size_12_sp"/>
    <TextView
        android:id="@+id/smart_home_camera_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="1dp"
        android:layout_marginTop="45dp"
        android:text="2020/02/13-02:11"
        android:textColor="@android:color/white"
        android:textSize="@dimen/public_text_size_12_sp"/>
    
    <!-- bottom operations -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/smart_home_camera_land_bottom_operations_height"
        android:layout_alignParentBottom="true"
        android:background="#33000000">
        <ImageView
            android:layout_width="@dimen/smart_home_camera_operation_1_item_height"
            android:layout_height="@dimen/smart_home_camera_operation_1_item_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/smart_home_camera_operation_1_item_mute_land_false"/>
        <ImageView
            android:layout_width="@dimen/smart_home_camera_operation_1_item_height"
            android:layout_height="@dimen/smart_home_camera_operation_1_item_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="86dp"
            android:src="@mipmap/smart_home_camera_operation_1_item_snapshot_land_false"/>
        <ImageView
            android:layout_width="@dimen/smart_home_camera_operation_1_item_height"
            android:layout_height="@dimen/smart_home_camera_operation_1_item_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="152dp"
            android:src="@mipmap/smart_home_camera_operation_1_item_record_land_false"/>
        <ImageView
            android:layout_width="@dimen/smart_home_camera_operation_1_item_height"
            android:layout_height="@dimen/smart_home_camera_operation_1_item_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="218dp"
            android:src="@mipmap/smart_home_camera_operation_1_item_hd_land_false"/>
        <ImageView
            android:id="@+id/switch_screen"
            android:layout_width="@dimen/smart_home_camera_operation_1_item_height"
            android:layout_height="@dimen/smart_home_camera_operation_1_item_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="284dp"
            android:src="@mipmap/smart_home_camera_operation_1_item_switch_port_land_false"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_call"
        android:layout_width="@dimen/smart_home_camera_operation_2_height"
        android:layout_height="@dimen/smart_home_camera_operation_2_height"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/smart_home_camera_operation_2_item_call"/>
</RelativeLayout>